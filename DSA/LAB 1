#include<iostream>
#define MAX 10
using namespace std;
int main(){
    int a[MAX];
    int choice,count=0;
    
    do{
    cout << "\n===== Menu =====";
    cout<<"\n1. Insert into array.";
    cout<<"\n2. Display elements of array.";
    cout<<"\n3. Update into array.";
    cout<<"\n4. Delete from array.";
    cout<<"\n5. Search in array.";
    cout<<"\n6. Display minimum value."; 
    cout<<"\n7. Display maximum value.";
    
    cout<<"\nEnter your choice:\n";
    cin>>choice;
    
    switch(choice){
        case 1:
            if(count>=MAX){
                cout<<"Array capacity full.";
                break;
            }
            cout<< "Insert into array.(Swornim Maharjan):\n";
            int element;
            cout<<"Enter element to insert:";
            cin>>element;
            a[count] = element;
            count++;
            break;
                
        case 2:
            if(count == 0){
                cout<<"No elements found in array"<<endl;
                break;
            }
            cout<<"display the array (Swornim Maharjan):\n";
            cout<<"the elements on the array are"<<endl;         
            for(int i=0;i<count;i++){
                cout<<a[i]<<" ";
            }
            break;
        
        case 3:
						int update;
						cout<<"enter element of array to update (Swornim Maharjan):"<<endl;
						cin>>update;
						update--;
						if(update>count){
							cout<<"invalid element";
							break;
						}
						int update_element;
						cout<<"enter the elements to replace with the array";
						cin>>update_element;
						a[update] = update_element;
						break;
        case 4:
						if(count<0){
									cout<<"no element"<<endl;
									break;
								}
						int del;
						cout<<"enter element to delete(Swornim Maharjan):";
						cin>>del;
						del--;
						if(del>count){
							cout<<"invalid"<<endl;
							break;
						}
						for(int i=del; i<=count;i++){
							a[i]=a[i+1];
							count--;
						}
						break;
        case 5:{
        	if(count == 0){
        cout<<"No elements found in array"<<endl;
        break;
    }
    cout<<"Search in array (Swornim Maharjan):\n";
    int s;
    cout<<"Enter a number:";
    cin>>s;

    int foundIndex = -1;   

    for(int i=0;i<count;i++){
        if(s == a[i]){
            foundIndex = i;
            cout<<"Found at index:"<< i+1 <<endl;
            break;
        }
    }

    if(foundIndex == -1){  
        cout<<"Not found"<<endl;
    }
    break;
		}
    

            
        case 6:{
			 if(count == 0){
                cout << "No elements found in array" << endl;
                break;
            }
            cout<<"Display minimum value (Swornim Maharjan):\n";
            int min=a[0];
            for(int i=1;i<count;i++){
                if(a[i]<min){
                    min=a[i];
                }
            }
            cout<<"The minimum number is:"<<min<<endl;
            break;
		}
           
            
        case 7:
		{
			 if(count == 0){
                cout << "No elements found in array" << endl;
                break;
            }
            cout<<"Display maximum value (Swornim Maharjan)\n"; 
            int max=a[0];
            for(int i=1;i<count;i++){
                if(a[i]>max){
                    max=a[i];
                }
            }
            cout<<"The maximum number is:"<<max<<endl;
            break;
		}
           
        
        default:
            cout<<"Please enter numbers between 1 to 8. Thank you!"<<endl;
            break;
        
    }
    }while(choice!=8);
    return 0;
}
