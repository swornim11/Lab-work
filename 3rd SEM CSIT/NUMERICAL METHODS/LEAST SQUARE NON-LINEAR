#include <stdio.h>
#include <math.h>

int main() {
    int n, i;
    float x[20], y[20];
    float sumX = 0, sumY = 0, sumXY = 0, sumX2 = 0;
    float A, a, b;
    printf("-----Swornim Maharjan----\n");

    printf("Least Square Approximation for Non-Linear Data\n");
    printf("Curve: y = a * e^(bx)\n");

    printf("\nEnter number of data points: ");
    scanf("%d", &n);

    /* Input x values */
    printf("\nEnter values of x:\n");
    for (i = 0; i < n; i++) {
        scanf("%f", &x[i]);
    }

    /* Input y values */
    printf("\nEnter values of y:\n");
    for (i = 0; i < n; i++) {
        scanf("%f", &y[i]);
    }

    /* Calculate required sums */
    for (i = 0; i < n; i++) {
        sumX  += x[i];
        sumY  += log(y[i]);          // ln(y)
        sumXY += x[i] * log(y[i]);
        sumX2 += x[i] * x[i];
    }

    /* Calculate coefficients */
    b = (n * sumXY - sumX * sumY) / (n * sumX2 - sumX * sumX);
    A = (sumY - b * sumX) / n;
    a = exp(A);
    

    printf("\nBest fit curve is:\n");
    printf("y = %.4f * e^(%.4fx)\n", a, b);

    return 0;
}
