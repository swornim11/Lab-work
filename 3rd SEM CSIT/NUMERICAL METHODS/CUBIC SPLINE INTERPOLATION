#include <stdio.h>

int main() {
    int n, i, j;
    float x[10], y[10], h[10];
    float a[10], b[10], c[10], d[10];
    float l[10], u[10], z[10];
    float xp, fx;
    
    printf("------Swornim Maharjan------\n");
    printf("-----Cubic Spline Interpolation-----\n");
    printf("\nEnter number of data points: ");
    scanf("%d", &n);

    printf("Enter x values:");
    for (i = 0; i < n; i++) {
        scanf("%f", &x[i]);
    }

    printf("Enter y values: ");
    for (i = 0; i < n; i++) {
        scanf("%f", &y[i]);
    }

    for (i = 0; i < n - 1; i++) {
        h[i] = x[i + 1] - x[i];
    }

    for (i = 1; i < n - 1; i++) {
        a[i] = (3 / h[i]) * (y[i + 1] - y[i])
             - (3 / h[i - 1]) * (y[i] - y[i - 1]);
    }

    l[0] = 1;
    u[0] = 0;
    z[0] = 0;

    for (i = 1; i < n - 1; i++) {
        l[i] = 2 * (x[i + 1] - x[i - 1]) - h[i - 1] * u[i - 1];
        u[i] = h[i] / l[i];
        z[i] = (a[i] - h[i - 1] * z[i - 1]) / l[i];
    }

    l[n - 1] = 1;
    z[n - 1] = 0;
    c[n - 1] = 0;

    for (j = n - 2; j >= 0; j--) {
        c[j] = z[j] - u[j] * c[j + 1];
        b[j] = (y[j + 1] - y[j]) / h[j]
             - h[j] * (c[j + 1] + 2 * c[j]) / 3;
        d[j] = (c[j + 1] - c[j]) / (3 * h[j]);
    }

    printf("Enter the value of x to find f(x): ");
    scanf("%f", &xp);

    for (i = 0; i < n - 1; i++) {
        if (xp >= x[i] && xp <= x[i + 1]) {
            fx = y[i]
               + b[i] * (xp - x[i])
               + c[i] * (xp - x[i]) * (xp - x[i])
               + d[i] * (xp - x[i]) * (xp - x[i]) * (xp - x[i]);
            break;
        }
    }

    printf("Interpolated value at x = %.3f is %.3f\n", xp, fx);

    return 0;
}
