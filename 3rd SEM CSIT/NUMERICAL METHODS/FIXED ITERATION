#include <stdio.h>
#include <math.h>

double g(double x) {
    return sqrt((3*x + 3) / (x + 1));
}

double f(double x) {
    return x*x*x+x*x-3*x-3;
}

int main() {
    double x0, x1;
    int iteration = 0;
    int max_iter = 20;
    double tol = 0.0001;
    printf("---Swornim Maharjan---\n");

    printf("To find the root of f(x) = x^3+x^2-3x-3 using Fixed Point Iteration\n");
    printf("Enter initial guess: ");
    scanf("%lf", &x0);

    while (iteration < max_iter) {
        iteration++;

        x1 = g(x0);

        printf("Iteration %d: x = %.6f, f(x) = %.6f\n",
               iteration, x1, f(x1));

        if (fabs(x1 - x0) < tol) {
            break;
        }

        x0 = x1;
    }

    printf("\nEstimated root: %.6f", x1);
    printf("\nf(%.6f) = %.6f", x1, f(x1));
    printf("\nTotal number of iterations: %d\n", iteration);

    return 0;
}
